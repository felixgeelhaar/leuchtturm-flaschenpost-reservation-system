{
  "name": "leuchtturm-flaschenpost-reservation-system",
  "version": "1.0.0",
  "description": "Magazine reservation system built with Astro, Vue.js, and Supabase",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose --coverage",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "npm run test:coverage && node scripts/check-coverage.js",
    "test:smoke": "playwright test --grep='@smoke'",
    "test:performance": "lighthouse-ci autorun",
    "analyze": "astro build --mode=analyze",
    "health-check:comprehensive": "node scripts/health-check.js",
    "db:generate": "supabase gen types typescript --project-id=$PROJECT_ID > src/types/database.ts",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:seed": "supabase db seed",
    "backup:trigger": "node scripts/backup-trigger.js",
    "backup:restore": "node scripts/backup-restore.js",
    "test:email": "tsx scripts/test-email.ts",
    "security:audit": "npm audit --audit-level high",
    "security:scan": "snyk test"
  },
  "dependencies": {
    "@astrojs/netlify": "6.5.6",
    "@astrojs/tailwind": "6.0.2",
    "@astrojs/vue": "5.1.0",
    "@heroicons/vue": "2.2.0",
    "@supabase/supabase-js": "2.54.0",
    "@types/nodemailer": "6.4.17",
    "astro": "5.12.9",
    "nodemailer": "7.0.5",
    "tailwindcss": "3.4.17",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/js": "9.33.0",
    "@playwright/test": "1.54.2",
    "@types/node": "24.2.1",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "@vitejs/plugin-vue": "6.0.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vue/test-utils": "2.4.6",
    "dotenv": "17.2.1",
    "eslint": "9.33.0",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-vue": "9.33.0",
    "happy-dom": "18.0.1",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jsdom": "26.1.0",
    "lighthouse": "12.8.1",
    "lint-staged": "16.1.5",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "tsx": "4.20.3",
    "typescript": "5.9.2",
    "vitest": "3.2.4",
    "vue-tsc": "3.0.5",
    "zod": "4.0.15"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/leuchtturm-flaschenpost-reservation-system.git"
  },
  "keywords": [
    "astro",
    "vue",
    "typescript",
    "tailwindcss",
    "supabase",
    "netlify",
    "reservation-system",
    "magazine",
    "gdpr"
  ],
  "author": "Your Organization",
  "license": "MIT"
}
